<map id="map" latitude="{{location.latitude}}" longitude="{{location.longitude}}" scale="{{scale}}" setting="{{setting}}" enable-overlooking="{{isOverLooking}}" enable-3D="{{is3D}}" markers="{{markers}}" show-location="true">

  <cover-view class="icon-container">
    <cover-image src="/resources/account.png"></cover-image>
    <cover-image src="/resources/location.png" bind:tap="onLocationTap"></cover-image>
  </cover-view>

  <cover-view class="btn-container bg-grey round" bind:tap="onScanClicked">
    <cover-view>扫码租车</cover-view>
  </cover-view>
</map>